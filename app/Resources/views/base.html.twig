<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Rpgmr</title>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {# stylesheets '@FooBundle/Resources/public/css/main.css' output='css/main.css' #}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        {% block stylesheet %}
        {% endblock %}
        {# endstylesheets #}
    </head>
    <body>
        <div class="container">
            <div class="navbar">
              <div class="navbar-inner">
                <a class="brand" href="{{ path('home') }}">Rpgmr</a>
                <ul class="nav">
                    {% block header %}
                    {% endblock %}
                </ul>
              </div>
            </div>
            {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="alert">
              <button type="button" class="close" data-dismiss="alert">Ã—</button>
              <strong>Warning!</strong> {{ flashMessage }}
            </div>
            {% endfor %}
            {% block content %}
            {% endblock %}
        </div>
        {% block javascript %}
        <!--<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>-->
        <script>window.jQuery || document.write('<script src="{{ asset('js/jquery.js') }}"><\/script>')</script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
        {% endblock %}
    </body>
</html>