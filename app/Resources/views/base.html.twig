<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{% block title %}{% endblock %}Rpgmr</title>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {# stylesheets '@FooBundle/Resources/public/css/main.css' output='css/main.css' #}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <!--
        <link rel="stylesheet" href="{{ asset('bundles/bootstrap/docs/assets/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/bootstrap/docs/assets/css/bootstrap-responsive.css') }}">
        -->
        {% block stylesheets %}{% endblock %}
        {# endstylesheets #}
    </head>
    <body>
        <div class="navbar">
            <div class="navbar-inner">
                <a class="brand" href="{{ path('home') }}">Rpgmr</a>
                <ul class="nav">
                    <li class="active"><a href="{{ path('personagem') }}">Personagens</a></li>
                    <li><a href="{{ path('mesa') }}">Mesas</a></li>
                    <li><a href="{{ path('usuario') }}">Amigos</a></li>
                    <li><a href="{{ path('negocio') }}">Neg√≥cios</a></li>
                </ul>
            </div>
        </div>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <strong>Warning!</strong> {{ flashMessage }}
        </div>
        {% endfor %}
        <!--<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>-->
        <script>window.jQuery || document.write('<script src="{{ asset('bundles/bootstrap/docs/assets/js/jquery.js') }}"><\/script>')</script>
        <script>window.jQuery || document.write('<script src="{{ asset('js/jquery.js') }}"><\/script>')</script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
        <script src="{{ asset('bundles/bootstrap/docs/assets/js/bootstrap.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>