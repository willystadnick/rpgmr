{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Regra list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descricao</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('regra_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.descricao }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('regra_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('regra_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('regra_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
